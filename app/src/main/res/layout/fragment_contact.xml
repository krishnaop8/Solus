<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.omprakash.solus.ContactFragment"
    android:background="#d3d3d3">
    <com.flaviofaria.kenburnsview.KenBurnsView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/techofes_blur_logo"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#83000000">
    <TextView
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/don_t_hesitate_to_reach_out"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_gravity="bottom|right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/textView3" />
    <TextView
        android:gravity="center_horizontal|center_vertical"
        android:text="We are here to hold up your queries which might turn:-
skepticism into sureness
objection into acceptance
confusion into confidence"
        android:textSize="28sp"
        android:textAlignment="center"
        android:layout_gravity="bottom|right"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/textView4" />

    <TextView
        android:text="Francis – 9789934485"
        android:maxLines="5"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView3"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/textView5" />
    <TextView
        android:text="Praveen – 9003987699"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView3"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/textView6" />
    <TextView
        android:text="Pragadeesh N – 9442324421"
        android:maxLines="5"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView3"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/textView7" />
    </RelativeLayout>


</RelativeLayout>
